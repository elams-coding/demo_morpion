<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../../../css/jeu.css" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.elams.demo_morpion.Jeu">
    <center>
        <GridPane id="grid-pane" fx:id="plateau" maxWidth="380.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button id="button-t-l" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#boutonCliquer" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onAction="#boutonCliquer" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Button id="button-b-l" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#boutonCliquer" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onAction="#boutonCliquer" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onAction="#boutonCliquer" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onAction="#boutonCliquer" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button id="button-t-r" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#boutonCliquer" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                    onAction="#boutonCliquer" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Button id="button-b-r" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    mnemonicParsing="false" onAction="#boutonCliquer" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <BorderPane.margin>
                <Insets bottom="5.0" top="5.0"/>
            </BorderPane.margin>
        </GridPane>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" styleClass="menu" text="Jeu">
                    <MenuItem mnemonicParsing="false" onAction="#nouvellePartie" text="Nouvelle partie">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    <MenuItem mnemonicParsing="false" onAction="#reinitialiser" text="Réinitialiser">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <CheckMenuItem fx:id="mBotImbattable" mnemonicParsing="false" onAction="#choisirImbattable"
                               text="MBot Imbattable">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="I" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                        </accelerator>
                    </CheckMenuItem>
                <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" onAction="#quitter" text="Quitter">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    <accelerator>
                        <KeyCodeCombination alt="DOWN" code="J" control="UP" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </Menu>
            <Menu mnemonicParsing="false" styleClass="menu" text="Fenêtre">
                <CheckMenuItem mnemonicParsing="false" onAction="#afficherHistorique" selected="true" text="Historique">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="DOWN"
                                                    shortcut="UP"/>
                            </accelerator>
                        </CheckMenuItem>
                    <CheckMenuItem mnemonicParsing="false" onAction="#afficherScore" selected="true" text="Score">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN"
                                                    shortcut="UP"/>
                            </accelerator>
                        </CheckMenuItem>
                    <accelerator>
                        <KeyCodeCombination alt="DOWN" code="F" control="UP" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </Menu>
            <Menu mnemonicParsing="false" styleClass="menu" text="Aide">
                    <MenuItem mnemonicParsing="false" onAction="#aPropos" text="À propos">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="DOWN"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    <MenuItem mnemonicParsing="false" onAction="#regles" text="Règles du jeu">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="DOWN"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    <accelerator>
                        <KeyCodeCombination alt="DOWN" code="A" control="UP" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </Menu>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </MenuBar>
    </top>
    <left>
        <ScrollPane fx:id="conteneurHistorique" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                    maxWidth="1.7976931348623157E308" minWidth="110.0" styleClass="scroll-pane-left" vbarPolicy="NEVER"
                    BorderPane.alignment="CENTER">
            <VBox fx:id="voletHistorique" minWidth="-Infinity" spacing="5.0">
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="titre-viewport"
                       text="Historique" textAlignment="CENTER"/>
                <padding>
                    <Insets left="5.0" right="5.0"/>
                </padding>
                </VBox>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
        </ScrollPane>
    </left>
    <right>
        <ScrollPane fx:id="conteneurScore" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                    maxWidth="1.7976931348623157E308" minWidth="110.0" styleClass="scroll-pane-right" vbarPolicy="NEVER"
                    BorderPane.alignment="CENTER">
            <VBox fx:id="voletScore" minWidth="-Infinity" spacing="5.0">
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="titre-viewport" text="Score"/>
                <padding>
                    <Insets left="5.0" right="5.0"/>
                </padding>
                </VBox>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
        </ScrollPane>
    </right>
    <bottom>
        <VBox id="vbox" alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="5.0" styleClass="hbox">
                    <children>
                        <Label text="Premier joueur :"/>
                        <Label fx:id="nomPremier" layoutX="263.0" layoutY="10.0" text="nom"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="5.0" styleClass="hbox">
                    <children>
                        <Label text="Tour de :"/>
                        <Label fx:id="nom" text="nom"/>
                        <HBox alignment="CENTER" fillHeight="false" spacing="5.0">
                            <children>
                                <Label text="["/>
                                <Label fx:id="signe" layoutX="10.0" layoutY="10.0" text="Signe"/>
                                <Label layoutX="54.0" layoutY="10.0" text="]"/>
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" top="10.0"/>
            </padding>
        </VBox>
    </bottom>
</BorderPane>
