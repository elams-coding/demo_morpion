<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.elams.demo_morpion.ParamJoueur">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <VBox alignment="CENTER" fillWidth="false" spacing="15.0">
        <Label text="Nombre de joueurs" />
        <HBox alignment="CENTER" spacing="30.0">
            <RadioButton mnemonicParsing="false" onAction="#modeUnJoueur" text="1 joueur" />
            <RadioButton mnemonicParsing="false" onAction="#modeDeuxJoueurs" text="2 joueurs" />
        </HBox>
    </VBox>
    <VBox fx:id="vbox1" alignment="CENTER" disable="true" fillWidth="false">
        <VBox alignment="CENTER" fillWidth="false" spacing="20.0">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <HBox fillHeight="false" spacing="10.0">
                <TextField fx:id="entree1" />
                <Button mnemonicParsing="false" text="OK" />
            </HBox>
            <HBox fillHeight="false" layoutX="10.0" layoutY="10.0" spacing="10.0">
                <TextField fx:id="entree2" />
                <Button mnemonicParsing="false" text="OK" />
            </HBox>
        </VBox>
        <Label fx:id="erreurMessage" text="Erreur" textFill="RED" />
    </VBox>
    <VBox fx:id="vbox2" alignment="CENTER" disable="true" spacing="15.0">
        <Label text="Qui commence ?" />
        <ChoiceBox fx:id="choix" />
    </VBox>
</VBox>
